<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_profile_container"
    tools:context=".fragments.MainFragments.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgWhiteBlue"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-37dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:background="@color/btnColor"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="84dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/btnColor"
                android:src="@drawable/arrow_left" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="15dp"
                android:text="@string/user_information"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="131dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivAvatar"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:src="@drawable/user_avatar"
                android:background="@color/bgWhiteBlue"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="100dp">

            <ImageButton

                android:id="@+id/btnChangeAvatar"

                android:layout_width="194dp"
                android:layout_height="40dp"
                android:background="@drawable/border_button_profile"
                android:paddingRight="130dp"
                android:src="@drawable/replace" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="205dp"
                android:layout_height="39dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="-59dp"
                android:layout_marginBottom="4dp"
                android:paddingLeft="60dp"
                android:text="@string/change_image"
                android:textColor="@color/btnColor"
                android:textSize="18dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittext_profile_inf"
            android:orientation="horizontal"
            android:paddingTop="5dp">


            <TextView
                android:id="@+id/textView2"
                android:layout_width="142dp"
                android:layout_height="37dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:text="@string/name"
                android:textColor="@color/borderColor"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="240dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_profile_no_border"
                android:ems="10"
                android:hint="@string/name"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"

                />


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"

            android:background="@drawable/edittext_profile_inf"
            android:orientation="horizontal"
            android:paddingTop="5dp">


            <TextView
                android:id="@+id/textView1"
                android:layout_width="129dp"
                android:layout_height="37dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:text="@string/gender"
                android:textColor="@color/borderColor"
                android:textSize="18dp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/rSex"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rMale"
                    android:layout_width="109dp"
                    android:layout_height="wrap_content"
                    android:text="@string/male"
                    android:textColor="@color/black" />

                <RadioButton
                    android:id="@+id/rFemale"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/female"
                    android:textColor="@color/black" />
            </RadioGroup>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="@drawable/edittext_profile_inf"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textView8"
                android:layout_width="131dp"
                android:layout_height="37dp"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:text="@string/day_of_birth"
                android:textColor="@color/borderColor"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/etDateOfBirth"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:hint="yyy-mm-dd"
                android:inputType="text"
                android:paddingTop="15dp"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            android:paddingTop="15dp">


            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:text="@string/email_"
                android:textColor="@color/borderColor"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/etEmail"
                android:layout_width="150dp"
                android:layout_height="37dp"
                android:layout_weight="1"
                android:text="trang02@gmail.com"
                android:textColor="@color/borderColor"
                android:textSize="15dp"
                android:textStyle="bold" />


        </LinearLayout>

        <RelativeLayout
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="130dp"
            >

            <ImageButton

                android:id="@+id/btnSave"

                android:layout_width="150dp"
                android:layout_height="55dp"
                android:background="@drawable/border_button_profile"
                android:paddingRight="80dp"
                android:src="@drawable/save" />

            <TextView
                android:id="@+id/text_view"
                android:layout_width="183dp"
                android:layout_height="43dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="-59dp"
                android:layout_marginBottom="4dp"
                android:paddingLeft="70dp"
                android:text="@string/save"
                android:textColor="@color/btnColor"
                android:textSize="19dp"
                android:textStyle="bold" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:layout_marginLeft="60dp">

            <ImageButton
                android:id="@+id/btnChangePassword"
                android:layout_width="270dp"
                android:layout_height="55dp"
                android:background="@drawable/border_button_profile"
                android:paddingRight="200dp"
                android:src="@drawable/password" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="275dp"
                android:layout_height="46dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="-59dp"
                android:layout_marginBottom="4dp"
                android:paddingLeft="70dp"
                android:text="@string/change_password"
                android:textColor="@color/btnColor"
                android:textSize="19dp"
                android:textStyle="bold" />
        </RelativeLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
