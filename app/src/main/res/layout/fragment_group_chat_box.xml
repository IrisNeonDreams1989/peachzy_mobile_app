<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MainFragments.Chats.ChatBoxFragment"
    android:background="@color/bgWhiteBlue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:background="@color/btnColor">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="61dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/btnColor"
            android:src="@drawable/arrow_left"
            android:layout_marginTop="2dp"
            android:layout_above="@+id/scrollView"/>

        <TextView
            android:id="@+id/tvGroupName"
            android:layout_width="171dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:text="@string/name"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btnCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/call"
            android:backgroundTint="@color/btnColor"
            android:layout_marginTop="5dp"/>

        <ImageButton
            android:id="@+id/btnCallVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/callvd"
            android:backgroundTint="@color/btnColor"
            android:layout_marginTop="5dp"/>
        <ImageButton
            android:id="@+id/btnOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/options"
            android:backgroundTint="@color/btnColor"
            android:layout_marginTop="5dp"/>

    </LinearLayout>
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:layout_above="@+id/layout_input">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvGroupChat"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_above="@+id/layout_input"
            android:layout_marginBottom="2dp"
            android:background="@color/bgWhiteBlue" />

    </ScrollView>


    <LinearLayout
        android:id="@+id/layout_input"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingRight="2dp"
        android:paddingBottom="5dp"
        >

        <ImageButton
            android:id="@+id/btnGroupLink"
            android:layout_width="29dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:src="@drawable/link"
            android:background="@drawable/border_button_sent"

            />

        <EditText
            android:id="@+id/etGroupMessage"
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edittext_profile_no_border"
            android:hint="@string/nhap_tin_nhan"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/textHintChat"
            android:textSize="19dp"/>

        <ImageButton
            android:id="@+id/btnGroupVideo"
            android:layout_width="13dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/btnColor"
            android:backgroundTint="@color/white"
            android:src="@drawable/baseline_video_file_30"

            />

        <ImageButton
            android:id="@+id/btnGroupImage"
            android:layout_width="9dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/border_button_sent"
            android:backgroundTint="@color/white"
            android:src="@drawable/imagechat" />

        <ImageButton
            android:id="@+id/btnGroupSend"
            android:layout_width="29dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border_button_sent"
            android:src="@drawable/sentmessage"

            />


    </LinearLayout>

</RelativeLayout>
