<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MainFragments.GroupChat.Option.GroupOptionFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/bgWhiteBlue">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@color/btnColor"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="84dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/btnColor"
                android:src="@drawable/arrow_left" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:padding="15dp"
                android:text="@string/tuy_chon"
                android:textColor="@color/white"
                android:textSize="20dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            >

            <ImageButton
                android:id="@+id/ivGroupAvatar"
                android:layout_width="152dp"
                android:layout_height="140dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/logo"
                android:background="@color/bgWhiteBlue"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tvGroupName"
                    android:layout_width="308dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ivAvatar"

                    android:text="Name Group"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="24dp"
                    android:textStyle="bold" />
                <ImageButton
                    android:id="@+id/btnChangeGroupName"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/ivAvatar"
                    android:src="@drawable/baseline_edit_24"
                    android:background="@color/white"
                    android:text="Name Group"
                    android:textSize="24dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    />
            </LinearLayout>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittext_profile"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnAddMember"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="-1dp"
                    android:layout_weight="1"
                    android:background="@drawable/my_ripple"
                    android:paddingRight="300dp"
                    android:src="@drawable/add_user_to_group" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="322dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:padding="15dp"
                    android:text="@string/them_thanh_vien"
                    android:textColor="@color/black"
                    android:textSize="20dp"/>
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_profile"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"

                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnListMember"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="-2dp"
                    android:layout_weight="1"
                    android:background="@drawable/my_ripple"
                    android:paddingRight="300dp"
                    android:src="@drawable/baseline_people_outline_26" />
                <TextView
                    android:id="@+id/tvListMember"
                    android:layout_width="322dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:padding="15dp"
                    android:text="@string/list_member"
                    android:textColor="@color/black"
                    android:textSize="20dp" />
            </RelativeLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_profile"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"

                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnManageMember"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="-2dp"
                    android:layout_weight="1"
                    android:background="@drawable/my_ripple"
                    android:paddingRight="300dp"
                    android:src="@drawable/delete_user_to_group" />
                <TextView
                    android:id="@+id/tvManageMember"
                    android:layout_width="322dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:padding="15dp"
                    android:text="@string/manage_member"
                    android:textColor="@color/black"
                    android:textSize="20dp" />
            </RelativeLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_profile"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"

                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnDeleteGroup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="-1dp"
                    android:layout_weight="1"
                    android:background="@drawable/my_ripple"
                    android:paddingRight="300dp"
                    android:src="@drawable/delete_group" />

                <TextView
                    android:id="@+id/tvDeleteGroup"
                    android:layout_width="322dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:padding="15dp"
                    android:text="@string/xoa_nhom"
                    android:textColor="@color/black"
                    android:textSize="20dp" />


            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_profile"
            android:orientation="vertical"
            android:paddingRight="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:orientation="horizontal"
                android:paddingLeft="5dp">

                <ImageButton
                    android:id="@+id/btnOutGroup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/my_ripple"
                    android:paddingRight="300dp"
                    android:src="@drawable/leave_group" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="322dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:padding="15dp"
                    android:text="@string/roi_nhom"
                    android:textColor="@color/black"
                    android:textSize="20dp" />


            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>