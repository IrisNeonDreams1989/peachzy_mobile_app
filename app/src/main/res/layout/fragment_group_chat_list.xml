<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgWhiteBlue"
    tools:context=".fragments.MainFragments.GroupChat.GroupChatListFragment">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@color/btnColor"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnOpenCreateGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                android:paddingRight="300dp"
                android:layout_weight="1"
                android:backgroundTint="@color/btnColor"
                android:src="@drawable/create_group" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:padding="15dp"
                android:text="@string/tao_nhom"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_marginLeft="80dp"/>


        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvGroupChatList"
            android:layout_width="match_parent"
            android:layout_height="653dp"
            android:background="@color/bgWhiteBlue"
            android:padding="15dp"
            android:layout_marginTop="5dp"/>

    </LinearLayout>



</RelativeLayout>