<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgetPassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgGrey"
        android:orientation="vertical"
        android:padding="40px"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Forgot your password?"
            android:textAlignment="center"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/textColorBtn"/>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginTop="50px"
            android:text="Please enter the email address associated with your account and We will send email you link to reset your password"
            android:textAlignment="center"
            android:textColor="#505861"
            android:textSize="19sp" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginTop="50px"
            android:background="@drawable/edittext_border"
            android:ems="10"
            android:hint="Email address"
            android:inputType="text"
            android:paddingLeft="20dp"
            android:textSize="16dp" />

        <Button
            android:id="@+id/btnForgetPassword"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginTop="50px"
            android:backgroundTint="@color/btnColor"
            android:text="Send"
            android:textColor="@color/textColorBtn"
            android:textStyle="bold"
            app:cornerRadius="10sp" />

        <Button
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px"
            android:backgroundTint="@color/bgGrey"
            android:text="Return to Sign in"
            android:textAlignment="textStart"
            android:textColor="@color/textColorBtn"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>